# Point to your PEAR directory here, which should contain
# the Solar installation.
php_value include_path /usr/local/pear/php

# Try to be smart out there: no short tags, no magic quotes.
php_flag short_open_tag off
php_flag magic_quotes_gpc off
php_flag magic_quotes_runtime off

# Redirect all requests not available on the filesystem to Solar.
# <http://wiki.rubyonrails.com/rails/pages/UnderstandingHowRequestsAreRouted>
# 
# Remember to set Solar.config.php values to something like this:
# 
# $config['Solar_Uri_Action']['path'] = '/';
#

# turn on rewriting
RewriteEngine On

# turn empty reqests into requests for "index.php",
# keeping the query string intact
RewriteRule ^$ index.php [QSA]

# add ".php" to all requests without a dot in them,
# keeping the query string intact.  also prevents
# directory browsing.
RewriteRule ^([^.]+)$ $1.php [QSA]    

# for all files and directories not found in the 
# file system, re-route to "index.php",
# keeping the query string intact
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]
