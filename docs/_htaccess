# Try to be smart out there: no short tags, no magic quotes.
php_flag short_open_tag off
php_flag magic_quotes_gpc off
php_flag magic_quotes_runtime off

# Redirect all requests not available on the filesystem to Solar.
# <http://wiki.rubyonrails.com/rails/pages/UnderstandingHowRequestsAreRouted>
# 
# Remember to set Solar.config.php values to something like this:
# 
# $config['Solar_Uri_Action']['path'] = '/';
#

# turn on rewriting
RewriteEngine On

# turn empty reqests into requests for "index.html",
# keeping the query string intact
RewriteRule ^$ index.html [QSA]

# add ".html" to all requests without a dot in them,
# keeping the query string intact. apparently prevents
# directory browsing.
RewriteRule ^([^.]+)$ $1.html [QSA]

# for all files not found in the file system,
# reroute to "index.php" bootstrap script,
# keeping the query string intact.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php [QSA,L]
